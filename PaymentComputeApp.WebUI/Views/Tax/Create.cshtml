@model TaxYearCreateViewModel
@{
    ViewData["Title"] = "Add Tax Year";
}

<div class="content-wrapper">
    <div class="col-md-12 grid-margin stretch-card pt-2">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Tax Years</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Add Year</li>
                    </ol>
                </nav><br /><br />
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    <div class="form-group col-md-1">
                        <label asp-for="YearOfTax"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="YearOfTax" class="form-control" />
                        <span asp-validation-for="YearOfTax"></span>
                    </div>                    
                    
                    
                    <div class="form-group">

                        <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-calculator" style="margin-right:0.7em"></i>Save</button>
                        <a asp-action="Index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                        <br />
                        <br />
                        <br />

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


